<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1><span class="description_Header">Listing Users</span></h1>

<table>
  <thead>
    <tr>
      <th><span class="description_Header">First Name</span></th>
      <th><span class="description_Header">Last Name</span></th>
      <th><span class="description_Header">Email</span></th>
      <th><span class="description_Header">Image</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><span class="description_fname"><%= user.fname %></span></td>
        <td><span class="description_lname"><%= user.lname %></span></td>
        <td><span class="description_email"><%= user.email %></span></td>
        <td><span class="description_thumbnail"><%= user.thumbnail %></span></td>
        <td><span class="btnsmall"><%= link_to 'Show', user %></span></td>
        <td><span class="btnsmall"><%= link_to 'Edit', edit_user_path(user) %></span></td>
        <td><span class="btnsmall"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="btn">
<%= link_to 'New User', new_user_path %>
</span>
